<h1><%= @doctor.name %></h1>
<h3>Department: <%= @doctor.department %></h3>
<h4>Appointments:</h4>
<br>
<%= @doctor.appointments.each do |appointment| %>
<p>Time: <%= appointment.appointment_datetime.strftime("%m") %> <%= appointment.appointment_datetime.strftime("%e") %>, <%= appointment.appointment_datetime.strftime("%Y") %> at <%= appointment.appointment_datetime.strftime("%H") %>:<%= appointment.appointment_datetime.strftime("%M") %><br>
  Patient: <%= link_to appointment.patient.name, patient_path(appointment.patient) %>
  <br>
<% end %>
